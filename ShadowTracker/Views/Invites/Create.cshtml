@model ShadowTracker.Models.Invite

@{
    ViewData["Title"] = "Create";
}


<div class="container-fluid">
    <h1>Invite New Employee</h1>
    <h4>Use this form to add a new employee to an existing project.</h4>
    <hr />
    <div class="row">
        <div class="col">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row gy-2">
                    <div class="col-12 col-md-5">
                        <div class="form-group">
                            <label asp-for="ProjectId" class="control-label"></label>
                            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                        </div>
                    </div>
                    <div class="col" style="padding-top: 2rem; height: 50%">
                        <a  class="btn btn-outline-jhprimary" asp-action="Create" asp-controller="Projects">New Project</a>
                    </div>
                </div>
                <div class="row gy-2">
                    <div class="col-12 col-md-4">
                        <div class="form-group">
                            <label asp-for="InviteeFirstName" class="control-label"></label>
                            <input asp-for="InviteeFirstName" class="form-control" />
                            <span asp-validation-for="InviteeFirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-group">
                            <label asp-for="InviteeLastName" class="control-label"></label>
                            <input asp-for="InviteeLastName" class="form-control" />
                            <span asp-validation-for="InviteeLastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-group">
                            <label asp-for="InviteeEmail" class="control-label"></label>
                            <input asp-for="InviteeEmail" class="form-control" />
                            <span asp-validation-for="InviteeEmail" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row gy-2">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Message" class="control-label"></label>
                            <input asp-for="Message" class="form-control" />
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
