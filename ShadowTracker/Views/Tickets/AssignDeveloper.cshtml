@model ShadowTracker.Models.ViewModels.AssignDeveloperViewModel
@using ShadowTracker.Services.Interfaces
@using Microsoft.AspNetCore.Identity
@using ShadowTracker.Extensions;

@inject UserManager<BTUser> UserManager
@inject IBTProjectService ProjectService

@{
    ViewData["Title"] = "AssignDevelopers";
}

<div class="container-fluid ">
    <div class="row">
        <div class="column text-center col-md-4">
            <h3>Assign Developer to @Model.Ticket.Title</h3>
            <div class="card">
                <div class="card-header">
                    <label class="control-label">
                        <a style="font-size:small" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">Project: @Model.Ticket.Project.Name</a>
                    </label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                        <input asp-for="Ticket.Id" hidden />
                        <div class="form-group">
                            <label class="col-form-label">Select Developers</label>
                            <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Assign" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
        @*<div>
            <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">Back to Project</a>
        </div>*@
</div>
